        <a href="/verify" data-name="Mastercard Prepaid" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Mastercard Prepaid</a>
        <a href="/verify" data-name="American Express Gift Card" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">American Express Gift Card</a>
        <a href="/verify" data-name="Vanilla Visa" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Vanilla Visa</a>
        <a href="/verify" data-name="OneVanilla" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">OneVanilla</a>
        <a href="/verify" data-name="Netspend" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Netspend</a>
      </div>
    </div>
  </section>

  <script is:inline>
    document.addEventListener("astro:page-load", () => {
      const input = document.getElementById("search");
      const items = Array.from(document.querySelectorAll("#brands a"));
      input?.addEventListener("input", () => {
        const q = input.value.toLowerCase();
        items.forEach((el) => {
          const name = el.dataset.name?.toLowerCase() || "";
          el.classList.toggle("hidden", !name.includes(q));
        });
      });
    });
  </script>
</Base>
