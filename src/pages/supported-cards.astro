---
import Base from "@/layouts/Base.astro";
---

<Base title="Supported Gift Cards" description="Browse all gift card brands supported by CardVerify.">
  <section class="py-16">
    <div class="container">
      <h1 class="h2 mb-6 text-center">Supported Cards</h1>
      <p class="mx-auto mb-10 max-w-2xl text-center text-text">
        Search and browse supported brands. Click a brand to start verification.
      </p>
      <div class="mx-auto mb-8 max-w-xl">
        <input type="text" id="search" placeholder="Search brands (e.g., Amazon)" class="w-full rounded-md border border-border p-3 focus:outline-none focus:ring-2 focus:ring-(--color-primary)" />
      </div>

      <div id="brands" class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
        <!-- Online & Marketplaces -->
        <a href="/verify" data-name="Amazon" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Amazon</a>
        <a href="/verify" data-name="Apple (iTunes)" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Apple (iTunes)</a>
        <a href="/verify" data-name="Google Play" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Google Play</a>
        <a href="/verify" data-name="Microsoft/Xbox" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Microsoft/Xbox</a>
        <a href="/verify" data-name="eBay" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">eBay</a>
        <a href="/verify" data-name="Etsy" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Etsy</a>

        <!-- Gaming -->
        <a href="/verify" data-name="PlayStation (PSN)" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">PlayStation (PSN)</a>
        <a href="/verify" data-name="Nintendo eShop" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Nintendo eShop</a>
        <a href="/verify" data-name="Steam" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Steam</a>
        <a href="/verify" data-name="Roblox" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Roblox</a>
        <a href="/verify" data-name="Razer Gold" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Razer Gold</a>
        <a href="/verify" data-name="Blizzard Battle.net" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Blizzard Battle.net</a>

        <!-- Major Retail -->
        <a href="/verify" data-name="Target" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Target</a>
        <a href="/verify" data-name="Walmart" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Walmart</a>
        <a href="/verify" data-name="Best Buy" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Best Buy</a>
        <a href="/verify" data-name="Home Depot" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Home Depot</a>
        <a href="/verify" data-name="Lowe's" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Lowe's</a>
        <a href="/verify" data-name="Costco" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Costco</a>
        <a href="/verify" data-name="Macy's" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Macy's</a>
        <a href="/verify" data-name="Kohl's" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Kohl's</a>
        <a href="/verify" data-name="TJ Maxx" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">TJ Maxx</a>
