        <a href="/verify" data-name="Grubhub" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Grubhub</a>
        <a href="/verify" data-name="Chipotle" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Chipotle</a>
        <a href="/verify" data-name="Domino's" class="block rounded-lg bg-white p-4 text-center shadow hover:shadow-md">Domino's</a>
